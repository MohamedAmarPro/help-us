<div class="container">



<div class="top-organization">
    <h1 class="welcome"><%= "Congratulations" %> <span class="blue-name"><%= current_user.first_name %></span> <%="your donation has been confirmed"%> </h1>

    <%= render "shared/user_photo_payment" %>
  </div>

  <div>
    <% @donation.orga_donas.each do |orga| %>
      <%= render "shared/organization_show_payment", organization: orga.organization, clickable: false %>
      <% end %>
  </div>



<div class="sticky d-flex justify-content-between gap-3" data-controller="hide-button" data-action="scroll@window->hide-button#scrollDown">

 <%= link_to "Share your donations", "https://twitter.com/intent/tweet?url=#{request.url}&text=I just donated to #{@donation.orga_donas.map{|orga| orga.organization.name}.join(", ")}", class: "submit-btn-payment mt-4" %>
</div>
</div>


 <%= render "shared/navbar" %>
