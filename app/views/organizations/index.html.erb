<%= render "shared/navbar_orga" %>
<div class="container">
  <div class="d-flex justify-content-between">
    <h1 class="welcome mt-4">Hello <em><%= @organization.name %></em> !</h1>
    <div class="mt-3"><%= render "shared/organization_photo" %></div>
  </div>

  <div class="d-flex flex-column align-items-center">
    <div class="card-organization mt-5">
      <%= cl_image_tag @organization.photo.key, crop: :fill if @organization.photo.attached? %>
      <div class="space mt-5">
        <h2 class="text-left"><%= @organization.name %></h2>
        <p><%= @organization.description %></p>
      </div>
    </div>

    <div class="mt-3 d-flex">
      <%= link_to "Create your event", new_event_path, class:'submit-btn orga-btn' %>
      <%= link_to "Update your organization", edit_organization_path(@organization), class: "submit-btn orga-btn" %>
    </div>
  </div>
</div>
